@section Scripts{
<script src="~/Scripts/jquery.elevatezoom.js"></script> 
     <script type="text/javascript">
         $(".Zoom").elevateZoom();
         $(window).load(function () {
             $('.loader').show();
             $(".loader").fadeOut("slow");
         });
    </script>
}
