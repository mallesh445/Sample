@model OnlineShoppingStoreMVCUsingLinq.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>

<h3>Product Details</h3>
<div class="row">
    <div class="col-md-4">
        <div class="col-md-12" style="border:1px solid #f0f0f0">
            <img class="Zoom" style="height:300px;align-content:center" src=@ViewBag.ImagePath alt="Loading.." data-zoom-image="@ViewBag.ImagePath" />
            @*<img class="Zoom" style="height:300px;width:250px" src=@ViewBag.ImagePath alt="Loading.." data-zoom-image="@ViewBag.ImagePath" />*@
        </div>
        <span></span>
        <div class="col-md-12 row" id="addBuyDiv">
            <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("AddToCart", "ShoppingCart", new {productId=@Model.PKProductId,price=@Model.Price,quantity=@Model.Quantity })'">
                <i class="fas fa-shopping-cart"></i> ADD TO CART </button>
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddToCart", "ShoppingCart", new {productId=@Model.PKProductId,price=@Model.Price,quantity=@Model.Quantity })'">
                <i class="fas fa-shopping-bag"></i> BUY NOW  </button>
            @*<ul style="list-style: none;">
            <li class="col col-md-4">
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("AddToCart", "ShoppingCart", new {productId=@Model.PKProductId,price=@Model.Price,quantity=@Model.Quantity })'">
                    <i class="fas fa-shopping-cart"></i> ADD TO CART
                </button>
            </li>
            <li class="">
                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddToCart", "ShoppingCart", new {productId=@Model.PKProductId,price=@Model.Price,quantity=@Model.Quantity })'">
                    <i class="fas fa-shopping-bag"></i> BUY NOW
                </button>
            </li>
        </ul>*@
        </div>
    </div>
    <div class="col-md-6">
        <h4>Product Name: @Html.DisplayFor(model => model.ProductName)</h4><br />
        <h4>Description:@Html.DisplayFor(model => model.Description)</h4><br />
        <h4>Price:</h4><h4 style="font-family:cursive;color:red">@Html.DisplayFor(model => model.Price)</h4>
    </div>
</div>

